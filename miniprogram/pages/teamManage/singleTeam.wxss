.section {
  display: flex;
  flex-direction: row;
  margin: 20rpx;
}

.section view {
  margin-right: 20rpx;
}

.table {
  border: 0px solid darkgray;
}

.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 3rem;
  align-items: center;
}

.title {
  margin: 10rpx 0;
  color: #5A9CCE;
  background-color: rgba(255, 255, 255, 0.2)
}

.td {
  width: 34%;
  justify-content: center;
  text-align: center;
}

.bg-w {
  background: snow;
}

.bg-g {
  background-color: rgba(90, 118, 240, 0.2);
}

.th {
  width: 40%;
  justify-content: center;
  background-color: rgba(9, 51, 240, 0.5);
  color: #fff;
  display: flex;
  height: 3rem;
  align-items: center;
}