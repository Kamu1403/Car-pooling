<!--pages/teamCreate.wxml-->


<!-- 用户填写的表单信息 -->
<form bindsubmit="formSubmit" bindreset="formReset">
    <!-- 队伍名 -->
    <view class="section">
      <view class="">队伍名</view>
      <input name="teamname" placeholder="队伍名" type="text" />
    </view>
 
    <!-- 手机号 -->
    <view class="section">
      <view class="">手机号</view>
      <input name="phone" placeholder="手机号"
             maxlength="11" type="number" />
    </view>

    <!-- 性别 -->
    <view class="section section_gap">
        <view class="">性别</view>
        <radio-group name="sex">
            <label><radio value="男" /> 男 </label>     <!-- 默认勾选男性，<radio value="男" /> -->
            <label><radio value="女" /> 女 </label>
        </radio-group>
    </view>

    <!-- 出发地 -->
    <view class="section">
        <view class="">出发地</view>
        <input name="phone" placeholder="出发地" type="text" />
    </view>

    <!-- 目的地 -->
    <view class="section">
        <view class="">目的地</view>
        <input name="phone" placeholder="目的地" type="text" />
    </view>

    <!-- 出发时间 -->
    <view class="section">
        <view class="">出发时间</view>
        <!-- 选择日期 -->
        <picker mode="date" bindchange= "bindDatetimeChange" data-op_type="start_date" value="{{start_date}}">
            <!-- 如果选择了就显示日期，否则提示日期 -->
            <view wx:if="{{start_date}}" class="picker">
                <view>{{start_date}}</view>
            </view>
            <view wx:else>选择日期</view>
        </picker>
        <!-- 选择时间 -->
        <picker mode="time" bindchange= "bindDatetimeChange" data-op_type="start_time" value="{{start_time}}">
            <!-- 如果选择了就显示时间，否则提示时间 -->
            <view wx:if="{{start_time}}" class="picker">
                <view>{{start_time}}</view>
            </view>
            <view wx:else>选择时间</view>
        </picker>
    </view>

    <!-- 到达时间 -->
    <view class="section">
        <view class="">到达时间</view>
        <!-- 选择日期 -->
        <picker mode="date" bindchange= "bindDatetimeChange" data-op_type="end_date" value="{{end_date}}">
            <!-- 如果选择了就显示日期，否则提示日期 -->
            <view wx:if="{{end_date}}" class="picker">
                <view>{{end_date}}</view>
            </view>
            <view wx:else>选择日期</view>
        </picker>
        <!-- 选择时间 -->
        <picker mode="time" bindchange= "bindDatetimeChange" data-op_type="end_time" value="{{end_time}}">
            <!-- 如果选择了就显示时间，否则提示时间 -->
            <view wx:if="{{end_time}}" class="picker">
                <view>{{end_time}}</view>
            </view>
            <view wx:else>选择时间</view>
        </picker>
    </view>


    <!-- 提交 -->
    <view class="btn-area">
      <button formType="submit" class="weui-btn weui-btn_primary">提交</button>
      <button formType="reset">重置</button>
    </view>
</form>


<view wx:if="{{isSubmit}}">
  {{warn ? warn : "是否公开信息："+isPub+"，手机号："+phone+"，密码："+pwd+"，性别："+sex}}
</view>
