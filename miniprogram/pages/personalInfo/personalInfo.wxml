<!--pages/personalinfo/personalinfo.wxml-->
<view class="page" data-weui-theme="{{theme}}" data-weui-mode="{{mode}}">
  <view class="weui-cells weui-cells_after-title">
    <navigator aria-role="" url="./changeheadimg" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
      <view aria-role="link" aria-labelledby="js_cell_tl1_bd js_cell_tl1_ft" id="js_cell_tl1_bd" class="weui-cell__bd">头像</view>
      <view class="weui-cell__ft weui-cell__ft_in-access" id="js_cell_tl1_ft" aria-hidden="true">
        <image class="head_image" src="{{userphoto}}"></image>
      </view>
    </navigator>
    <navigator aria-role="" url="./change?changeWhat=name" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
      <view aria-role="link" aria-labelledby="js_cell_tl2_bd js_cell_tl2_ft" id="js_cell_tl2_bd" class="weui-cell__bd">用户名</view>
      <view id="js_cell_tl2_ft" aria-hidden="true" class="weui-cell__ft weui-cell__ft_in-access">{{username}}</view>
    </navigator>
    <navigator aria-role="" url="./change?changeWhat=gender" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
      <view aria-role="link" aria-labelledby="js_cell_tl2_bd js_cell_tl2_ft" id="js_cell_tl2_bd" class="weui-cell__bd">性别</view>
      <view id="js_cell_tl2_ft" aria-hidden="true" class="weui-cell__ft weui-cell__ft_in-access">{{sex_array[usergender]}}</view>
    </navigator>
    <navigator aria-role="" url="./change?changeWhat=phone" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
      <view aria-role="link" aria-labelledby="js_cell_tl2_bd js_cell_tl2_ft" id="js_cell_tl2_bd" class="weui-cell__bd">手机号</view>
      <view id="js_cell_tl2_ft" aria-hidden="true" class="weui-cell__ft weui-cell__ft_in-access">{{userphone}}</view>
    </navigator>
    <navigator aria-role="" url="./change?changeWhat=email" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
      <view aria-role="link" aria-labelledby="js_cell_tl2_bd js_cell_tl2_ft" id="js_cell_tl2_bd" class="weui-cell__bd">邮箱</view>
      <view id="js_cell_tl2_ft" aria-hidden="true" class="weui-cell__ft weui-cell__ft_in-access">{{useremail}}</view>
    </navigator>
  </view>
</view>